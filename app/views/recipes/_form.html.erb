<%= render "shared/error", obj: @recipe %>

<div class="row justify-content-center">
  <div class="col-6">
  <%= form_for(@recipe, :html => { class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group p-2">
      <div class="control-label">
        <%= f.label :name %>
      </div>
        <%= f.text_field :name, class: "form-control", placeholder: "Recipe name", autofocus: true %>
    </div>

    <div class="form-group p-2">
      <div class="control-label">
        <%= f.label :description %>
      </div>
        <%= f.text_area :description, class: "form-control", placeholder: "Recipe description", autofocus: true %>
    </div>

    <div class="form-group p-2">
      <div class="control-label">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", recipes_path , class: "btn btn-danger"%>
      </div>
    </div>
  <% end %>
  </div>
</div>
